{
	"extends": "@mingull/typescript-config/base.json",
	"compilerOptions": {
		"baseUrl": "./",
		"target": "ESNext",
		"module": "NodeNext",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"sourceMap": false,
		"declarationMap": false,
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["./node_modules", "./dist"]
}
